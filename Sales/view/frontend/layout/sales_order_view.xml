<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <link src="Labelin_Sales::js/artworkacceptance.js" />
    </head>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="order_items">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Labelin_Sales::order/items.phtml</argument>
                </action>
                <referenceBlock name="order_totals">
                    <arguments>
                        <argument name="label_properties" xsi:type="string">colspan="5" class="mark"</argument>
                    </arguments>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>

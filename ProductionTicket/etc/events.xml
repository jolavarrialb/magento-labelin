<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="labelin_order_production_status_after">
        <observer name="order_status_in_production_handler" instance="Labelin\ProductionTicket\Observer\Order\InProductionStatusHandler" />
    </event>
    <event name="labelin_order_item_production_status_after">
        <observer name="order_item_attached_files_creation_handler"  instance="Labelin\ProductionTicket\Observer\Order\Item\InProductionAttachedFilesHandler" />
        <observer name="order_item_status_in_production_handler" instance="Labelin\ProductionTicket\Observer\Order\Item\InProductionStatusHandler" />
        <observer name="order_item_in_production_email_sender" instance="Labelin\ProductionTicket\Observer\Order\Item\InProductionStatusEmailHandler.php"/>
    </event>
    <event name="labelin_production_ticket_save_after">
        <observer name="labelin_production_ticket_save_after" instance="Labelin\ProductionTicket\Observer\CompleteStatusHandler" />
        <observer name="labelin_production_ticket_email_to_programmer" instance="Labelin\ProductionTicket\Observer\EmailHandler" />
    </event>
</config>
